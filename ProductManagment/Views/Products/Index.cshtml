@model IEnumerable<ProductManagement.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<style>
    /* Index Page Styles */
    body {
        background-color: #eaf3fb;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #003366;
        text-align: center;
    }

    .table th, .table td {
        color: #003366;
    }

    a {
        color: #003366;
        text-decoration: none;
    }

    /* Styled Buttons for 'Create New', 'Edit', 'Delete', etc. */
    .btn {
        padding: 8px 15px;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        color: #ffffff;
        text-decoration: none;
    }

    .btn-create {
        background-color: #003366;
        border: none;
    }

        .btn-create:hover {
            background-color: #002244;
        }

    .btn-edit {
        background-color: #0066cc;
        border: none;
    }

        .btn-edit:hover {
            background-color: #005bb5;
        }

    .btn-delete {
        background-color: #cc0000;
        border: none;
    }

        .btn-delete:hover {
            background-color: #990000;
        }

    a.btn {
        color: #ffffff;
    }

        a.btn:hover {
            color: #ffffff;
            text-decoration: none;
        }

</style>

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-create">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
